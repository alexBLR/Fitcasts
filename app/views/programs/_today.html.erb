 <% @todayvideos.each do |todayvideo| %> 
 <div class="row-fluid center" style="max-width:640px;">
  <div class="span12 center" style="max-width:640px; background-color: #252525; height: 43px;">
    <p style="float:left; background-color: #009ddd; color:white; padding:5px; font-weight:bold; font-size: 18px; margin:0px; line-height:15px; text-align:center;">Day <%= @programday %> <br><span style="font-size: 10px;">out of <%= @days %></span></p>
    <p style="float:left; padding-left: 10px;
    font-size: 19px;
    font-weight: bold; color: white;"><%= @program.name %></p>
    <ul class="inline" style="float:right;">
      <li style="margin-top:5px;"><a class="btn btn-primary btn-sm btn-responsive" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fwww.fitcasts.com<%= video_path todayvideo.id %>"> <img height="20" width="20" src="../images/icons/flat-icons/facebook.png" alt="team"> share</a></li> 
      <li style="margin-top:5px;"><a class="btn btn-primary btn-sm btn-responsive" href="https://twitter.com/intent/tweet?text=Use the <%= @days %> day <%= @program.name %> I created on fitcasts.com, or make your own for free!%>&url=http://www.fitcasts.com<%= video_path todayvideo.id%>"><img height="20" width="20" src="../images/icons/flat-icons/twitter.png" alt="team"> share</a></li>
    </ul>
    
  </div>
</div>
<div class="row-fluid center" style="max-width:640px; background: rgba(0,0,0, 0.99); padding: 0px;">
  <div class="video-container">
    <iframe src="http://www.youtube.com/embed/<%=todayvideo.tubeid %>?enablejsapi=1&rel=0&autohide=1&showinfo=0&modestbranding=1&cc_load_policy=0&iv_load_policy=3" frameborder="0" width="640" height="360"></iframe>
  </div>
</div>
<div class="row-fluid center" style="max-width:640px;">
  <ul class="list" style="text-align: left; color: white; margin: 0px; margin-bottom: 10px; padding: 10px; list-style-type: none; font-size:25px; font-weight:bold; background-color: #252525;">
    <li style="margin-bottom: 5px;"><%=todayvideo.name %></li> 
    <li>Equipment: <%=todayvideo.equipment %></li>
  </ul>
</div>
<% end %>