<% provide(:title, 'Workout Plan That Fits Your Needs') %>
<% provide(:tubeid, @workouts[1].video.tubeid) %>
<% provide(:name, @programs.name) %>
<% provide(:videoid, program_path) %>
<div class="row-fluid center" style="max-width:640px;">
  <ul class="list" style="text-align: center; color: black; margin-top: 10px; margin-left: 0px; padding-bottom: 10px; list-style-type: none; font-size:25px; font-weight:bold;">
    <li>Goal : <%=@programs.goal %></li>
  </ul>
  <ul class="inline" style="text-align: center;">
    <li><a class="btn btn-primary btn-lg btn-responsive" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fwww.fitcasts.com<%= program_path @programs.id%>"> <img height="20" width="20" src="../images/icons/flat-icons/facebook.png" alt="team"> Share program</a></li> 
    <li><a class="btn btn-primary btn-lg btn-responsive" href="https://twitter.com/intent/tweet?text=I just started this <%=@programs.name %> fitness program I found on Fitcasts! Do it with me or create one 4 free!&url=http://www.fitcasts.com<%= program_path @programs.id%>"><img height="20" width="20" src="../images/icons/flat-icons/twitter.png" alt="team"> Share program</a></li>
  </ul>
</div>

<ul class='timeline' style="margin-top: -5px;">
	<li class="year" style="background-color: #ffffff; font-size: 30px; margin-bottom: -35px; font-weight: bold"><%= link_to "Start Program", make_mine_path(@programs), :method => :get %></li> 
  <% @workouts.each_with_index do |workout, i| %> 
  <% if i==0 || i % 7 == 0  %>
  <li class="year">Week <%= ((i+1)/7.to_f).ceil %></li> 
  <% end %>
  <li class="event"><a href="<%=video_path workout.video.id %>" style="text-decoration: none;">
    <div style="height:182px; overflow-y: hidden;
    overflow-x: visible; margin-top: -40px;">
    <p style="position:absolute; left:0px; bottom:0px; background-color: #009ddd; color:white; padding:5px; font-weight:bold; font-size: 18px; margin:0px;">Day <%= i+1 %></p>
    <p style="position:absolute; right:15px; top:10px; background: rgba(0, 0, 0, 0.4); color:white; padding-left:5px; padding-right:5px;"><%=workout.video.duration %> min</p>  
    <img src="http://img.youtube.com/vi/<%=workout.video.tubeid %>/0.jpg" height="480" width="640">
  </div>
  <ul class="nav nav-pills nav-stacked" style="text-align: left; color: white; padding: 10px; font-size:13px; background: rgba(0,0,0, 0.87); margin-top: 0px; margin-bottom:0px; padding-left:70px; font-weight: bold;">  
    <% if workout.video.name.length > 30 %>
    <li><%=workout.video.name[0..26]%>...</li>
    <% else %>
    <li><%=workout.video.name%></li>
    <% end %>
  </ul>
</a></li>
<% end %>
</ul>