<% provide(:title, 'Reset Password') %>
<div class="container-fluid">
	<div class="row center">
		<div class="span7-fluid center" style="max-width:600px; background: rgba(255, 255, 255, 0.6); padding: 10px; border: solid #b9b9b9; border-width: 1px 1px;">
			<h1  class="landing2" style="margin-top:5px;">Reset Password</h1>
			<%= form_tag password_resets_path, :method => :post do %>
			<%= label_tag(:email, "Email", :style => "float: left; font-weight: bold;") %>
			<%= text_field_tag :email %>
			<%= submit_tag "Reset Password", class: "btn btn-large btn-primary" %>
			<% end %>
		</div>
	</div>
